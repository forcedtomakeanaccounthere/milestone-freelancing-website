<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Employer Profile</title>
  <link rel="stylesheet" href="/css/EmployerD/sidebar.css" />
  <link rel="stylesheet" href="/css/EmployerD/profile.css" />
  <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700&display=swap" rel="stylesheet">
</head>
<body>
  <div class="dashboard-wrapper">
    <%- include('partials/sidebar', { user: user, activePage: 'profile' }) %>
    <div class="main-content">
      <div class="container">
        <div class="header">
          <h1>Employer Profile</h1>
          <a href="/employerD/profile/edit" class="edit-button">
            <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none"
              stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
              <path d="M11 4H4a2 2 0 0 0-2 2v14a2 2 0 0 0 2 2h14a2 2 0 0 0 2-2v-7"></path>
              <path d="M18.5 2.5a2.121 2.121 0 0 1 3 3L12 15l-4 1 1-4 9.5-9.5z"></path>
            </svg>
            Edit Profile
          </a>
        </div>

        <div class="profile-section">
          <div class="profile-image">
            <img src="<%= user.picture %>" alt="Company Logo" id="companyLogo">
          </div>

          <div class="profile-info">
            <div class="profile-header">
              <h2 class="company-name" id="companyNameDisplay"><%= company.name %></h2>
              <div class="top-employer-badge">
                <svg xmlns="http://www.w3.org/2000/svg" width="14" height="14" viewBox="0 0 24 24" fill="none"
                  stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                  <circle cx="12" cy="8" r="7"></circle>
                  <polyline points="8.21 13.89 7 23 12 20 17 23 15.79 13.88"></polyline>
                </svg>
                Top Employer
              </div>
            </div>

            <div class="profile-meta">
              <div class="meta-item">
                <span class="meta-label">Role:</span>
                <span class="meta-value" id="roleDisplay"><%= user.role %></span>
              </div>
            </div>

            <div class="location">
              <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none"
                stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                <path d="M21 10c0 7-9 13-9 13s-9-6-9-13a9 9 0 0 1 18 0z"></path>
                <circle cx="12" cy="10" r="3"></circle>
              </svg>
              <span id="locationDisplay"><%= user.location || 'Not specified' %></span>
            </div>

            <div class="website">
              <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none"
                stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                <circle cx="12" cy="12" r="10"></circle>
                <line x1="2" y1="12" x2="22" y2="12"></line>
                <path d="M12 2a15.3 15.3 0 0 1 4 10 15.3 15.3 0 0 1-4 10 15.3 15.3 0 0 1-4-10 15.3 15.3 0 0 1 4-10z"></path>
              </svg>
              <a href="<%= company.website || '#' %>" id="websiteDisplay" target="_blank"><%= company.website || 'Not specified' %></a>
            </div>

            <div class="contact">
              <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none"
                stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                <path d="M4 4h16c1.1 0 2 .9 2 2v12c0 1.1-.9 2-2 2H4c-1.1 0-2-.9-2-2V6c0-1.1.9-2 2-2z"></path>
                <polyline points="22,6 12,13 2,6"></polyline>
              </svg>
              <span id="emailDisplay"><%= user.email %></span>
            </div>

            <div class="contact">
              <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                <path d="M22 16.92v3a2 2 0 0 1-2.18 2 19.79 19.79 0 0 1-8.63-3.07 19.5 19.5 0 0 1-6-6 19.79 19.79 0 0 1-3.07-8.67A2 2 0 0 1 4.11 2h3a2 2 0 0 1 2 1.72 12.84 12.84 0 0 0 .7 2.81 2 2 0 0 1-.45 2.11L8.09 9.91a16 16 0 0 0 6 6l1.27-1.27a2 2 0 0 1 2.11-.45 12.84 12.84 0 0 0 2.81.7A2 2 0 0 1 22 16.92z"></path>
              </svg>
              <span id="phoneDisplay"><%= user.phone || 'Not specified' %></span>
            </div>

            <div class="social-links" id="socialLinksDisplay">
              <% if (user.socialMedia.linkedin) { %>
              <div class="social-link-container">
                <a href="<%= user.socialMedia.linkedin %>" class="social-link" data-platform="linkedin" id="linkedinLink">
                  <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none"
                    stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                    <path d="M16 8a6 6 0 0 1 6 6v7h-4v-7a2 2 0 0 0-2-2 2 2 0 0 0-2 2v7h-4v-7a6 6 0 0 1 6-6z"></path>
                    <rect x="2" y="9" width="4" height="12"></rect>
                    <circle cx="4" cy="4" r="2"></circle>
                  </svg>
                </a>
                <span class="social-url">LinkedIn</历程
              </div>
              <% } %>
              <% if (user.socialMedia.twitter) { %>
              <div class="social-link-container">
                <a href="<%= user.socialMedia.twitter %>" class="social-link" data-platform="twitter" id="twitterLink">
                  <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none"
                    stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                    <path d="M23 3a10.9 10.9 0 0 1-3.14 1.53 4.48 4.48 0 0 0-7.86 3v1A10.66 10.66 0 0 1 3 4s-4 9 5 13a11.64 11.64 0 0 1-7 2c9 5 20 0 20-11.5a4.5 4.5 0 0 0-.08-.83A7.72 7.72 0 0 0 23 3z"></path>
                  </svg>
                </a>
                <span class="social-url">Twitter</span>
              </div>
              <% } %>
              <% if (user.socialMedia.facebook) { %>
              <div class="social-link-container">
                <a href="<%= user.socialMedia.facebook %>" class="social-link" data-platform="facebook" id="facebookLink">
                  <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none"
                    stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                    <path d="M18 2h-3a5 5 0 0 0-5 5v3H7v4h3v8h4v-8h3l1-4h-4V7a1 1 0 0 1 1-1h3z"></path>
                  </svg>
                </a>
                <span class="social-url">Facebook</span>
              </div>
              <% } %>
              <% if (user.socialMedia.instagram) { %>
              <div class="social-link-container">
                <a href="<%= user.socialMedia.instagram %>" class="social-link" data-platform="instagram" id="instagramLink">
                  <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none"
                    stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                    <rect x="2" y="2" width="20" height="20" rx="5" ry="5"></rect>
                    <path d="M16 11.37A4 4 0 1 1 12.63 8 4 4 0 0 1 16 11.37z"></path>
                    <line x1="17.5" y1="6.5" x2="17.51" y2="6.5"></line>
                  </svg>
                </a>
                <span class="social-url">Instagram</span>
              </div>
              <% } %>
            </div>

            <div class="rating-section">
              <div class="rating">
                <span class="star">★</span>
                <span class="star">★</span>
                <span class="star">★</span>
                <span class="star">★</span>
                <span class="star">☆</span>
                <span>4.2</span>
              </div>
              <div class="rating-count">(54 reviews)</div>
            </div>
          </div>
        </div>

        <div class="grid-container">
          <div class="about-section">
            <h3 class="section-title">About <span id="aboutCompanyName"><%= company.name %></span></h3>
            <div class="about-content" id="aboutContentDisplay">
              <% if (user.aboutMe) { %>
                <% user.aboutMe.split('\n\n').forEach(paragraph => { %>
                  <p><%= paragraph %></p><br />
                <% }) %>
              <% } else { %>
                <p>No about information provided.</p>
              <% } %>
            </div>
          </div>

          <div class="subscription-section">
            <h3 class="section-title">Subscription</h3>
            <div class="subscription-info">
              <span class="meta-label">Subscription Type:</span>
              <span class="meta-value subscription-badge" id="subscriptionDisplay"><%= user.subscription || 'None' %></span>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>

  <script src="/js/EmployerD/profile.js"></script>
</body>
</html>