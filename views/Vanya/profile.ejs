<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Freelancer Dashboard - Profile</title>
    <link
      rel="stylesheet"
      href="/css/FreelancerD/static_elements/sidebar.css"
    />
    <link rel="stylesheet" href="/css/FreelancerD/profile.css" />
  </head>
  <body>
    <div class="dashboard-wrapper">
      <!-- Sidebar -->
      <%- include('./partials/sidebar', {activePage: 'profile'}) %>
      <div class="main-content">
        <div class="container">
          <div class="header">
            <h1>Freelancer Profile</h1>
            <a href="/freelancerD/profile/edit" class="edit-button">
              <svg
                xmlns="http://www.w3.org/2000/svg"
                width="16"
                height="16"
                viewBox="0 0 24 24"
                fill="none"
                stroke="currentColor"
                stroke-width="2"
                stroke-linecap="round"
                stroke-linejoin="round"
              >
                <path
                  d="M11 4H4a2 2 0 0 0-2 2v14a2 2 0 0 0 2 2h14a2 2 0 0 0 2-2v-7"
                ></path>
                <path
                  d="M18.5 2.5a2.121 2.121 0 0 1 3 3L12 15l-4 1 1-4 9.5-9.5z"
                ></path>
              </svg>
              Edit Profile
            </a>
          </div>

          <div class="profile-section">
            <div class="profile-image">
              <img src="<%= user.picture %>" alt="Profile Image"
              id="profileImage" />
            </div>

            <div class="profile-info">
              <div class="profile-header">
                <h2 id="nameDisplay"><%= user.name || 'N/A' %></h2>
                <div class="top-freelancer-badge">
                  <svg
                    xmlns="http://www.w3.org/2000/svg"
                    width="14"
                    height="14"
                    viewBox="0 0 24 24"
                    fill="none"
                    stroke="currentColor"
                    stroke-width="2"
                    stroke-linecap="round"
                    stroke-linejoin="round"
                  >
                    <circle cx="12" cy="8" r="7"></circle>
                    <polyline
                      points="8.21 13.89 7 23 12 20 17 23 15.79 13.88"
                    ></polyline>
                  </svg>
                  Top Freelancer
                </div>
              </div>

              <div class="title" id="titleDisplay">
                <%= user.role || 'N/A' %>
              </div>

              <div class="location">
                <svg
                  xmlns="http://www.w3.org/2000/svg"
                  width="16"
                  height="16"
                  viewBox="0 0 24 24"
                  fill="none"
                  stroke="currentColor"
                  stroke-width="2"
                  stroke-linecap="round"
                  stroke-linejoin="round"
                >
                  <path
                    d="M21 10c0 7-9 13-9 13s-9-6-9-13a9 9 0 0 1 18 0z"
                  ></path>
                  <circle cx="12" cy="10" r="3"></circle>
                </svg>
                <span id="locationDisplay"><%= user.location || 'N/A' %></span>
              </div>

              <div class="contact">
                <svg
                  xmlns="http://www.w3.org/2000/svg"
                  width="16"
                  height="16"
                  viewBox="0 0 24 24"
                  fill="none"
                  stroke="currentColor"
                  stroke-width="2"
                  stroke-linecap="round"
                  stroke-linejoin="round"
                >
                  <path
                    d="M4 4h16c1.1 0 2 .9 2 2v12c0 1.1-.9 2-2 2H4c-1.1 0-2-.9-2-2V6c0-1.1.9-2 2-2z"
                  ></path>
                  <polyline points="22,6 12,13 2,6"></polyline>
                </svg>
                <span id="emailDisplay"><%= user.email || 'N/A' %></span>
              </div>

              <div class="contact">
                <svg
                  xmlns="http://www.w3.org/2000/svg"
                  width="16"
                  height="16"
                  viewBox="0 0 24 24"
                  fill="none"
                  stroke="currentColor"
                  stroke-width="2"
                  stroke-linecap="round"
                  stroke-linejoin="round"
                >
                  <path
                    d="M22 16.92v3a2 2 0 0 1-2.18 2 19.79 19.79 0 0 1-8.63-3.07 19.5 19.5 0 0 1-6-6 19.79 19.79 0 0 1-3.07-8.67A2 2 0 0 1 4.11 2h3a2 2 0 0 1 2 1.72 12.84 12.84 0 0 0 .7 2.81 2 2 0 0 1-.45 2.11L8.09 9.91a16 16 0 0 0 6 6l1.27-1.27a2 2 0 0 1 2.11-.45 12.84 12.84 0 0 0 2.81.7A2 2 0 0 1 22 16.92z"
                  ></path>
                </svg>
                <span id="phoneDisplay"><%= user.phone || 'N/A' %></span>
              </div>

              <div class="rating-section">
                <div class="rating">
                  <span class="star">★</span>
                  <span class="star">★</span>
                  <span class="star">★</span>
                  <span class="star">★</span>
                  <span class="star">★</span>
                  <span>4.8/5</span>
                </div>
              </div>
            </div>
          </div>

          <div class="grid-container">
            <div>
              <div class="about-section">
                <h3 class="section-title">About Me</h3>
                <div class="about-content" id="aboutDisplay">
                  <p><%= user.aboutMe || 'No description provided.' %></p>
                </div>
              </div>

              <div class="skills-section">
                <h3 class="section-title">Skills</h3>
                <div class="skills-list" id="skillsDisplay">
                  <% if (user.skills && user.skills.length > 0) { %>
                    <% user.skills.forEach(skill => { %>
                      <span class="skill-tag"><%= skill %></span>
                    <% }) %>
                  <% } else { %>
                    <p>No skills added yet.</p>
                  <% } %>
                </div>
              </div>

              <div class="experience-section">
                <h3 class="section-title">Experience</h3>
                <div class="experience-list" id="experienceDisplay">
                  <% (user.experience || []).forEach(exp => { %>
                  <div class="experience-item">
                    <h5><%= exp.title || 'N/A' %></h5>
                    <p class="experience-date"><%= exp.date || 'N/A' %></p>
                    <p><%= exp.description || 'No description provided.' %></p>
                  </div>
                  <% }) %>
                </div>
              </div>

              <div class="education-section">
                <h3 class="section-title">Education</h3>
                <div class="education-list" id="educationDisplay">
                  <% (user.education || []).forEach(edu => { %>
                  <div class="education-item">
                    <h5><%= edu.degree || 'N/A' %></h5>
                    <p class="education-date">
                      <%= edu.institution || 'N/A' %>
                    </p>
                    <p class="education-date"><%= edu.date || 'N/A' %></p>
                  </div>
                  <% }) %>
                </div>
              </div>

              <div class="portfolio-section">
                <h3 class="section-title">Portfolio</h3>
                <div class="portfolio-grid" id="portfolioDisplay">
                  <% (user.portfolio || []).forEach(port => { %>
                  <div class="portfolio-item">
                    <img
                      src="<%= port.image || '/assets/portfolio/default.png' %>"
                      alt="<%= port.title || 'Portfolio Item' %>"
                      onerror="this.src='/assets/portfolio/default.png';"
                    />
                    <h5><%= port.title || 'N/A' %></h5>
                    <p><%= port.description || 'No description provided.' %></p>
                    <a href="<%= port.link || '#' %>" class="portfolio-link"
                      >View Project</a
                    >
                  </div>
                  <% }) %>
                </div>
              </div>

              <div class="resume-section">
                <h3 class="section-title">Resume</h3>
                <div class="resume-content" id="resumeDisplay">
                  <a href="<%= user.resume || '#' %>" class="resume-link"
                    >View Resume</a
                  >
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>

    <script src="/js/FreelancerD/profile.js"></script>
  </body>
</html>