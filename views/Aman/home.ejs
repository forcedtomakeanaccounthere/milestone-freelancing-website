    <!-- Hero Section -->
    <section class="hero">
        <div class="container">
            <div class="hero-content">
                <h1 class="fade-in">Elevate Your Career With Top Talent</h1>
                <p class="fade-in">Connect with skilled freelancers or find exciting projects that match your expertise.
                </p>
                <div class="hero-buttons fade-in">
                    <a href=/jobs class="btn btn-primary">
                        <i class="fas fa-search" id="icon_spacing"></i> Find Jobs
                    </a>

                    <% if (user && user.role === "Employer") { %>
                    <a href="employerD/job_listings/new" class="btn btn-outline">
                        <i class="fas fa-plus" id="icon_spacing"></i> Post a Job
                    </a>
                    <% } else if (user) { %>
                        <a href="javascript:void(0);" class="btn btn-outline" onclick="showUnauthorizedMessage()">
                            <i class="fas fa-plus" id="icon_spacing"></i> Post a Job
                        </a>
                    <% } else { %>
                        <a href="javascript:void(0);" class="btn btn-outline" onclick="showLoginUnauthorizedMessage()">
                            <i class="fas fa-plus" id="icon_spacing"></i> Post a Job
                        </a>
                    <% } %>

